<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
	xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
	xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
	parent="%core.module_dir%/News/config/validators.xml"
>
	<ae:configuration>

		<!-- For POST Method -->
		<validators method="write">
			
			<!-- Translation's Checkbox -->
			<validator class="isset" provides="translation_filled">
				<arguments base="translation[]">
					<argument>check</argument>
				</arguments>
				<ae:parameters>
					<ae:parameter name="required">false</ae:parameter>
				</ae:parameters>
			</validator>


			<!-- Translation's Title -->
			<validator class="string" depends="[translation_filled]" translation_domain=".news.validation">
				<arguments base="translation[]">
					<argument>title</argument>
				</arguments>
				<ae:parameters>
					<ae:parameter name="required">true</ae:parameter>
					<ae:parameter name="max">200</ae:parameter>
				</ae:parameters>
				<errors>
					<error>the title field has an invalid value</error>
					<error for="max">the title must be shorter than 200 characters</error>
					<error for="required">please provide a title</error>
				</errors>
			</validator>


			<!-- Translation's Summary -->
			<validator class="string" depends="[translation_filled]" translation_domain=".news.validation">
				<arguments base="translation[]">
					<argument>summary</argument>
				</arguments>
				<ae:parameters>
					<ae:parameter name="required">false</ae:parameter>
				</ae:parameters>
				<errors>
					<error>the summary field has an invalid value</error>
				</errors>
			</validator>


			<!-- Translation's Content -->
			<validator class="string" depends="[translation_filled]" translation_domain=".news.validation">
				<arguments base="translation[]">
					<argument>content</argument>
				</arguments>
				<ae:parameters>
					<ae:parameter name="required">true</ae:parameter>
				</ae:parameters>
				<errors>
					<error>the content field has an invalid value</error>
					<error for="required">please provide a content</error>
				</errors>
			</validator>


			<!-- Image -->
			<validator class="string" translation_domain=".news.validation">
				<arguments>
					<argument>image</argument>
				</arguments>
				<ae:parameters>
					<ae:parameter name="required">false</ae:parameter>
				</ae:parameters>
				<errors>
					<error>invalid image</error>
				</errors>
			</validator>


			<!-- Date -->
			<validator class="datetime" translation_domain=".news.validation">
				<arguments>
					<argument>date</argument>
				</arguments>
				<ae:parameters>
					<ae:parameter name="formats">
						<ae:parameters>
							<ae:parameter>
								<!-- English Date Format -->
								<ae:parameter name="locale">en_US</ae:parameter>
								<ae:parameter name="type">datetime</ae:parameter>
								<ae:parameter name="format">%XRX.dateFormat.en%</ae:parameter>
								<ae:parameter name="required">true</ae:parameter>
							</ae:parameter>
							<ae:parameter>
								<!-- Persian Date Format -->
								<ae:parameter name="locale">fa_IR</ae:parameter>
								<ae:parameter name="type">datetime</ae:parameter>
								<ae:parameter name="format">%XRX.dateFormat.fa%</ae:parameter>
								<ae:parameter name="required">true</ae:parameter>
							</ae:parameter>
						</ae:parameters>
					</ae:parameter>
					<ae:parameter name="export">date</ae:parameter>
					<ae:parameter name="cast_to">
						<ae:parameters>
							<ae:parameter name="type">datetime</ae:parameter>
							<ae:parameter name="format">%XRX.dateFormat.db%</ae:parameter>
							<ae:parameter name="required">true</ae:parameter>
						</ae:parameters>
					</ae:parameter>
					<ae:parameter name="required">true</ae:parameter>
				</ae:parameters>
				<errors>
					<error>invalid date format</error>
					<error for="required">please provide date</error>
				</errors>
			</validator>


			<!-- Category -->
			<validator class="number" translation_domain=".news.validation">
				<arguments>
					<argument>category</argument>
				</arguments>
				<ae:parameters>
					<ae:parameter name="required">true</ae:parameter>
				</ae:parameters>
				<errors>
					<error>invalid category</error>
					<error for="required">please select a category</error>
				</errors>
			</validator>


			<!-- Publish -->
			<validator class="number" translation_domain=".news.validation">
				<arguments>
					<argument>published</argument>
				</arguments>
				<ae:parameters>
					<ae:parameter name="required">true</ae:parameter>
				</ae:parameters>
				<errors>
					<error>invalid published value</error>
					<error for="required">please provide published value</error>
				</errors>
			</validator>


			<!-- Comments -->
			<validator class="number" translation_domain=".news.validation">
				<arguments>
					<argument>comments</argument>
				</arguments>
				<ae:parameters>
					<ae:parameter name="required">true</ae:parameter>
				</ae:parameters>
				<errors>
					<error>invalid comment status</error>
					<error for="required">please provide comment status</error>
				</errors>
			</validator>

		</validators>
		
	</ae:configuration>
</ae:configurations>