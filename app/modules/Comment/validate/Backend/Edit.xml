<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
	xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
	xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
	parent="%core.module_dir%/Comment/config/validators.xml"
>
	<ae:configuration>

		<!-- For GET & POST Methods -->
		<validators>

			<!-- ID -->
			<validator class="number" translation_domain=".comment">
				<arguments>
					<argument>id</argument>
				</arguments>
				<ae:parameters>
					<ae:parameter name="required">true</ae:parameter>
				</ae:parameters>
				<errors>
					<error>The id has an invalid value.</error>
					<error for="required">Please provide an id.</error>
				</errors>
			</validator>

		</validators>
		
	</ae:configuration>
</ae:configurations>
