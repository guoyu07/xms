<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
	xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
	xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
	parent="%core.agavi_dir%/config/defaults/validators.xml"
>
	<ae:configuration>
		
		<validator_definitions>
		</validator_definitions>

		<validators>

			<!-- Page Number -->
			<validator class="number">
				<arguments>
					<argument>_p</argument>
				</arguments>
				<ae:parameters>
					<ae:parameter name="required">false</ae:parameter>
					<ae:parameter name="translation_domain">.default</ae:parameter>
				</ae:parameters>
				<errors>
					<error>invalid page number</error>
				</errors>
			</validator>

		</validators>
		
	</ae:configuration>
</ae:configurations>
