<div id="xrx-comment-form">
	<h3><?= $tm->_('leave a comment', '.comment') ?></h3>
	<form action="<?= $ro->gen('default', array('path'=>'comment/add')); ?>" method="post" lang="<?= $t['_language']; ?>">
