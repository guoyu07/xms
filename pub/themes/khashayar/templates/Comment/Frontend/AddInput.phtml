		<p>
			<input type="text" id="xrx-comment-email" name="email" value="<?= $us->getAttribute('email') ?>" maxlength="100" readonly="readonly" />
			<small><label for="xrx-comment-email"><?= $tm->_('email', '.comment') ?> (<?= $tm->_('required', '.comment') ?>)</label></small>
		</p>
		<p>
			<input type="text" id="xrx-comment-url" name="url" value="<?= $us->getAttribute('website') ?>" maxlength="200" readonly="readonly" />
