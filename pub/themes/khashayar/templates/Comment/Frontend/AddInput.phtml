		<p>
			<input type="text" id="xrx-comment-url" name="url" maxlength="200" />
			<small><label for="xrx-comment-url"><?= $tm->_('website', '.comment') ?></label></small>
		</p>
		<? endif; ?>
		<p>
			<textarea id="xrx-comment-content" name="content" rows="10" cols="60"></textarea>
		</p>

		<input type="hidden" name="module_id" value="<?= $t['module_id'] ?>" />
		<input type="hidden" name="owner_id" value="<?= $t['owner_id'] ?>" />
		<input type="submit" value="<?= $tm->_('submit comment', '.comment') ?>" />
	</form>
